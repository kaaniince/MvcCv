
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MvcCv.Models.Entity;
@model List<TblAwards>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {


                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">

                                                <div class="timeline-body">
                                                    @item.Description
                                                </div>

                                                <div class="timeline-footer">
                                                    <a href="/Award/GetAward/@item.ID" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="/Award/DeleteAward/@item.ID" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                            <div>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div><!-- /.card-body -->
                            <a href="/Award/AddAward/" class="btn btn-info">Add New Award</a>
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
    </section>
</body>
</html>

